/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     struct ListNode *next;
 * };
 */
struct ListNode* removeElements(struct ListNode* head, int val) {
    struct ListNode *temp=head,*follow=head,*folfollow=head;
    while(temp!=NULL){
        if(head->val==val){
            head=head->next;
            temp=head;
        }
        else if(temp->val==val){
            temp=temp->next;
            follow->next=temp;
        }
        
        else{
            folfollow=follow;
            follow=temp;
            temp=temp->next;
        }
    }
    if(head!=NULL)
    return head;
    else
    return NULL;    
}
