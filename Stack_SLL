#include <stdio.h>
#include <stdlib.h>

struct node {
    int info;
    struct node *next;
};
struct node* insertend(struct node *start, int item) {
    struct node *p, *temp;
    p = (struct node*)malloc(sizeof(struct node));
    p->info = item;
    p->next = NULL;

    if (start == NULL) {
        start = p;
        return start;
    }

    temp = start;
    while (temp->next != NULL)
        temp = temp->next;

    temp->next = p;
    return start;
}

struct node* rev(struct node *start){
    struct node *cur=NULL,*temp=start->next;
    while(start!=NULL){
            temp=start->next;
    start->next=cur;
    cur=start;
    start=temp;
    }
    return cur;
}

struct node* deletelast(struct node *start) {
    struct node *temp, *follow;

    if (start == NULL) {
        printf("List is empty.\n");
        return start;
    }

    // Only one node
    if (start->next == NULL) {
        free(start);
        return NULL;
    }

    temp = start;
    while (temp->next != NULL) {
        follow = temp;
        temp = temp->next;
    }

    follow->next = NULL;
    free(temp);

    return start;
}

void display(struct node *start) {
    struct node *p = start;
    
    if (p == NULL) {
        printf("Stack is empty.\n");
        return;
    }
    p=rev(start);
    while (p != NULL) {
        printf("%d\n", p->info);
        p = p->next;
    }
}

int main() {
    struct node *start = NULL;
    int n=0, item;
    printf("1.Push\n2.Pop\n3.Display\n4.Exit\n");
    while(n!=4){
            scanf("%d",&n);
        switch(n){
    case 1:
        printf("Enter element to be inserted\n");
        scanf("%d",&item);
        start=insertend(start,item);
        break;
    case 2:
        start=deletelast(start);
        break;
    case 3:
        display(start);
        break;
        }
    }
}

CIRCULAR QUEUE:
#include <stdio.h>

#define maxsize 3
int queue[maxsize];
int front = -1, rear = -1;

int insert(int item) {
    if (front == (rear + 1) % maxsize) {
        printf("Queue is full\n");
        return 0;
    }

    if (front == -1) {      // first insertion
        front = 0;
        rear = 0;
    } else {
        rear = (rear + 1) % maxsize;
    }

    queue[rear] = item;
    return 1;
}

int delete() {
    if (front == -1) {
        printf("Queue is empty\n");
        return -1;
    }

    int item = queue[front];

    if (front == rear) {    // only one element
        front = -1;
        rear = -1;
    } else {
        front = (front + 1) % maxsize;
    }

    return item;
}

void display() {
    if (front == -1) {
        printf("Queue is empty\n");
        return;
    }

    printf("Queue elements:\n");

    int i = front;
    while (1) {
        printf("%d\n", queue[i]);
        if (i == rear)
            break;
        i = (i + 1) % maxsize;
    }
}

int main() {
    int n = 0, item;

    while (n != 4) {
        printf("1. Insert\n2. Delete\n3. Display\n4. Exit\n");
        scanf("%d", &n);

        switch (n) {
            case 1:
                printf("Enter item to insert: ");
                scanf("%d", &item);
                insert(item);
                break;

            case 2:
                item = delete();
                if (item != -1)
                    printf("Deleted element: %d\n", item);
                break;

            case 3:
                display();
                break;
        }
    }
    return 0;
}
